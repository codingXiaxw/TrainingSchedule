<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:background="#0000"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/back"
        android:textSize="40sp"
        android:text="返回"/>

    <LinearLayout
        android:background="#0000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">


        <TextView
            android:background="#0000"
            android:id="@+id/theme_31"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="14:30-15:50"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:background="#0000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <Button
                android:background="#0000"
                android:id="@+id/topic_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="专题报告三:“互联网+”时代思想政治教育的思考"
                android:layout_marginBottom="20dp"
                android:textSize="40sp"/>


            <Button
                android:background="#0000"
                android:id="@+id/person_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="主讲人: 董玉来"
                android:textSize="30sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#0000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp">


        <TextView
            android:background="#0000"
            android:id="@+id/theme_41"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="16:00-17:30"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:background="#0000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <Button
                android:background="#0000"
                android:id="@+id/topic_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="专题报告四:高校网络思想政治教育"
                android:layout_marginBottom="20dp"
                android:textSize="40sp"/>


            <Button
                android:background="#0000"
                android:id="@+id/person_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="主讲人: 王慧敏"
                android:textSize="30sp"/>
        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:background="#0000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <Button
            android:background="#0000"
            android:id="@+id/amClock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40sp"
            android:gravity="bottom|center"
            android:textColor="#FFFFFF"
            android:text="上午"/>
        <Button
            android:background="#0000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40sp"
            android:gravity="bottom|center"
            android:text="下午"
            android:textColor="#FFFFFF"
            android:id="@+id/pmClock"/>
    </LinearLayout>


</LinearLayout>